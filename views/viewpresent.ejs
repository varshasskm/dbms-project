<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Available trains</title>
    <link rel="stylesheet" href="style.css">
    <script type="text/javascript">
    function select(x){
      document.getElementById("selection").value = x ;
    }
    </script>
    <style media="screen">
    .exp:hover{
      background-color: lightgreen;
      font-weight: 800;
    }
    </style>
  </head>
  <body style="background-color: thistle;">
    <h1 class="booking-intro">EXISTING TICKETS</h1>
    <table class="table-center">
      <tr>
        <td>Ticket number</td>
        <td>Express no</td>
        <td>Train no</td>
        <td>Departure date</td>
        <td>Depature time</td>
        <td>No. of FC seats</td>
        <td>No. of SC seats</td>
        <td>Total Cost</td>
        
      </tr>
      <% for(var i = 0;i < result.length; i++){ %>
        <tr>
          <td>
            <button type="button" class="exp" align="center" name="button" onclick="select(<%= result[i]["BOOKING_ID"] %>)">
                <%= result[i]["BOOKING_ID"] %>
            </button>
          </td>
          <td>
            <%= result[i]["EXPRESS_NO"] %>
          </td>
          <td>
            <%= result[i]["TRAIN_NO"] %>
          </td>
          <td>
            <%= result[i]["DEPARTURE_DATE"]%>
          </td>
          <td>
            <%= result[i]["DEPARTURE_TIME"]%>
          </td>
          <td>
            <%= result[i]["TOTAL_FC_SEATS"] %>
          </td>
          <td>
            <%= result[i]["TOTAL_SC_SEATS"] %>
          </td>
          <td>
            <%= result[i]["TOTAL_COST"] %>
          </td>
        </tr>
      <% } %>
    </table>
    <div align="center">
      <form class="bookingform" action="/cancel" method="post">
        <input type="text" style="text-align: center;" name="selection" id="selection" value="" placeholder="Ticket no." required onkeydown="return flase;">
        <input type="submit" class="smallbut" name="" value="Cancel ticket">
      </form>
    </div>
    <div align="center">
        <form class="bookingform" action="/home" method="get">
          <input type="submit" class="smallbut" name="" value="Go back">
        </form>
      </div>
  </body>
</html>